# =============================================================================
# AI Continuous ATO Platform â€” Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# Django
# ---------------------------------------------------------------------------
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# ---------------------------------------------------------------------------
# Database (PostgreSQL + pgvector)
# ---------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ato_db
DB_USER=ato_user
DB_PASSWORD=ato_pass

# ---------------------------------------------------------------------------
# Celery (Redis)
# ---------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ---------------------------------------------------------------------------
# Evidence Vault (MinIO / S3-compatible)
# ---------------------------------------------------------------------------
EVIDENCE_VAULT_ENDPOINT=http://minio:9000
EVIDENCE_VAULT_ACCESS_KEY=minioadmin
EVIDENCE_VAULT_SECRET_KEY=minioadmin
EVIDENCE_VAULT_BUCKET=ato-evidence
EVIDENCE_VAULT_SECURE=false

# ---------------------------------------------------------------------------
# Vector DB
# ---------------------------------------------------------------------------
VECTOR_DB_BACKEND=pgvector
VECTOR_DB_COLLECTION=ato_compliance
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ---------------------------------------------------------------------------
# LLM Configuration
# ---------------------------------------------------------------------------
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096
OPENAI_API_KEY=sk-...

# ---------------------------------------------------------------------------
# MCP Router
# ---------------------------------------------------------------------------
MCP_MAX_CONCURRENT=10
MCP_TIMEOUT=60
MCP_REQUIRE_MTLS=false

# =============================================================================
# Cloud Provider Credentials
# =============================================================================
# Each provider uses its standard SDK credential chain.
# Set the variables below OR use IAM roles / managed identities in production.

# ---------------------------------------------------------------------------
# AWS (Commercial)
# ---------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
# Optional: session token for temporary credentials
# AWS_SESSION_TOKEN=

# ---------------------------------------------------------------------------
# AWS GovCloud
# ---------------------------------------------------------------------------
# AWS_GOVCLOUD_ACCESS_KEY_ID=
# AWS_GOVCLOUD_SECRET_ACCESS_KEY=
# AWS_GOVCLOUD_DEFAULT_REGION=us-gov-west-1

# ---------------------------------------------------------------------------
# Azure (Commercial)
# ---------------------------------------------------------------------------
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# ---------------------------------------------------------------------------
# Azure Government
# ---------------------------------------------------------------------------
# AZURE_GOV_TENANT_ID=
# AZURE_GOV_CLIENT_ID=
# AZURE_GOV_CLIENT_SECRET=
# AZURE_GOV_SUBSCRIPTION_ID=
# AZURE_AUTHORITY_HOST=https://login.microsoftonline.us

# ---------------------------------------------------------------------------
# GCP (Commercial)
# ---------------------------------------------------------------------------
# Option 1: Service account key file (mount via docker volume)
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-sa-key.json
# Option 2: Set project explicitly
# GCP_PROJECT_ID=my-project-id

# ---------------------------------------------------------------------------
# GCP Government
# ---------------------------------------------------------------------------
# GOOGLE_GOV_APPLICATION_CREDENTIALS=/app/gcp-gov-sa-key.json
# GCP_GOV_PROJECT_ID=

